<script>
    function checkPassword(inputId, contentId) {
        var inputPassword = document.getElementById(inputId).value;
        var correctPassword = "1234"; // Ustaw swoje hasło dla tego akordeonu

        if (inputPassword.trim() === correctPassword) { 
            document.getElementById(contentId).style.display = "block";
        } else {
            alert("Niepoprawne hasło! Spróbuj ponownie.");
        }
    }
</script>
